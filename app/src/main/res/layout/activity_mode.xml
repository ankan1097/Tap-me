<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_mode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/menubg"
    tools:context="com.example.ankan.thinkb4utap.ModeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:layout_marginBottom="120dp"
        android:layout_centerHorizontal="true"
        android:text="MODES"
        android:textColor="#FFFFFF"
        android:id="@+id/mode"/>


    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/classic"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/mode"
        fancy:fb_radius="30dp"
        fancy:fb_textColor="#000000"
        fancy:fb_borderWidth="3dp"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_fontIconResource="&#xf0f6;"
        fancy:fb_defaultColor="#66bb6a"
        fancy:fb_textSize="20dp"
        fancy:fb_text="Classic mode"/>
    <mehdi.sakout.fancybuttons.FancyButton
        android:layout_below="@id/classic"
        android:id="@+id/math"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_height="40dp"
        fancy:fb_defaultColor="#ffb300"
        fancy:fb_textColor="#000000"
        fancy:fb_borderWidth="3dp"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_fontIconResource="&#xf1fe;"
        fancy:fb_textSize="20dp"
        fancy:fb_radius="30dp"
        fancy:fb_text="Math mode"/>

</RelativeLayout>
